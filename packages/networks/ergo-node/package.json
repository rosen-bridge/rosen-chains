    "ergo-lib-wasm-nodejs": "^0.23.0",
    "it-all": "^3.0.1",
    "json-bigint": "^1.0.0"
  },
  "devDependencies": {
    "@rosen-bridge/tokens": "^0.1.12",
    "@types/json-bigint": "^1.0.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.26.0",
    "@vitest/coverage-c8": "^0.30.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "typescript": "^5.0.4",
